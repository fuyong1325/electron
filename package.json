{
  "name": "gebm",
  "version": "1.2.0",
  "description": "Geriatrics EBM Organization Client",
  "author": "四川宜蓓康科技有限公司",
  "main": "./src/main.js",
  "scripts": {
    "clean": "rimraf ./build",
    "start": "electron .",
    "electron:generate-icons": "electron-icon-builder --input=./src/assets/logo.png --output=src --flatten",
    "packager": "electron-packager ./ gebm --platform=win32 --out ./dist --icon=./src/icons/icon.ico --arch=x64 --asar --overwrite --ignore=node_modules --electron-version=18.2.3",
    "build:win32": "electron-builder --win --ia32",
    "build:win64": "electron-builder --win --x64",
    "build:mac": "electron-builder --mac"
  },
  "dependencies": {
    "electron-store": "^8.0.2",
    "electron-updater": "^5.0.1",
    "getmac": "^5.20.0",
    "ip": "^1.1.8"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "electron": "^18.2.3",
    "electron-builder": "^23.0.3",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^15.5.1"
  },
  "build": {
    "extraFiles": [],
    "publish": [
      {
        "provider": "generic",
        "url": ""
      }
    ],
    "productName": "GEBM",
    "appId": "gebm-org-client",
    "copyright": "四川宜蓓康科技有限公司",
    "compression": "maximum",
    "directories": {
      "buildResources": "build",
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./src/icons/icon.ico",
      "uninstallerIcon": "./src/icons/icon.ico",
      "installerHeaderIcon": "./src/icons/icon.ico",
      "installerSidebar": "./src/assets/sidebar.bmp",
      "uninstallerSidebar": "./src/assets/sidebar.bmp",
      "uninstallDisplayName": "${productName}",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "deleteAppDataOnUninstall": true,
      "artifactName": "${productName}_Setup.${ext}",
      "shortcutName": "EBI GEBM.R",
      "include": "./src/installer.nsh"
    },
    "files": [
      "src/**/*"
    ],
    "mac": {
      "icon": "./src/icons/icon.icns",
      "target": "dmg"
    },
    "win": {
      "icon": "./src/icons/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "target": "deb",
      "icon": "./src/icons/icon.ico"
    }
  }
}
