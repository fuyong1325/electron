{
  "name": "geriatrics-ebm",
  "version": "0.1.0",
  "description": "ebi-Geriatrics EBM Organization PC",
  "main": "./src/main.js",
  "scripts": {
    "start": "electron .",
    "electron:generate-icons": "electron-icon-builder --input=./src/assets/icon.png --output=src --flatten",
    "packager": "electron-packager ./ geriatrics-ebm --platform=win32 --out ./dist --icon=./src/icons/icon.ico --arch=x64 --asar --overwrite --ignore=node_modules --electron-version=18.2.3",
    "build:win": "electron-builder --win --x64"
  },
  "repository": "https://github.com/electron/electron-quick-start",
  "keywords": [
    "Electron",
    "quick",
    "start",
    "tutorial",
    "demo"
  ],
  "author": "ebicom",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "^18.2.3",
    "electron-builder": "^23.0.3",
    "electron-icon-builder": "^2.0.1",
    "electron-packager": "^15.5.1"
  },
  "dependencies": {
    "getmac": "^5.20.0",
    "ip": "^1.1.8"
  },
  "build": {
    "appId": "ebi-gebm-org-pc",
    "productName": "geriatrics-ebm",
    "copyright": "ebicom",
    "compression": "maximum",
    "directories": {
      "buildResources":"build",
      "output": "build"
    },
    "mac": {
      "icon": "./src/icons/icon.icns",
      "target": ["dmg","zip"]
    },
    "win": {
      "icon": "./src/icons/icon.ico",
      "target": ["nsis","zip"]
    },
    "linux": {
      "icon": "./src/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "guid": "ebi-gebm-org-pc",
      "perMachine": true,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "./src/icons/icon.ico",
      "uninstallerIcon": "./src/icons/icon.ico",
      "installerHeaderIcon": "./src/icons/icon.ico",
      "installerSidebar": "./src/assets/img.bmp",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "geriatrics-ebm"
    }
  }
}
